{
    "name": "ch4o5/sm3-php",
    "description": "国密sm3加密方式的PHP实现",
    "type": "library",
    "license": "MIT",
    "homepage": "https://sm3.doylee.cn/",
    "authors": [
        {
            "name": "ch4o5",
            "email": "li_dongyun@outlook.com",
            "homepage": "https://blog.doylee.cn/"
        }
    ],
    "support": {
        "email": "li_dongyun@outlook.com",
        "docs": "https://sm3.doylee.cn/"
    },
    "require": {
        "php": ">=5.3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8.36"
    },
    "autoload": {
        "psr-4": {
            "SM3\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "config": {
        "bin-dir": "scripts",
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "prefer-stable": true,
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer/"
        }
    },
    "archive": {
        "exclude": [
            ".*",
            "dist/",
            "tests/",
            "CNAME",
            "_config.yml"
        ]
    },
    "scripts": {
        "ci": [
            "@composer install --ignore-platform-reqs",
            "@composer update --prefer-lowest --prefer-stable",
            "@composer validate --no-check-all --strict",
            "@composer dump-autoload --no-interaction --ansi --verbose --classmap-authoritative --no-dev --apcu -plugin",
            "@test-fossa",
            "@test",
            "@arch"
        ],
        "dev": [
            "rm -rf scripts/",
            "rm -rf ./vendor",
            "rm -rf composer.lock",
            "@composer install --ignore-platform-reqs",
            "@composer validate --no-check-all --strict",
            "@composer dump-autoload --ansi --verbose",
            "@test"
        ],
        "test-fossa": [
            "curl -H 'Cache-Control: no-cache' https://raw.githubusercontent.com/fossas/fossa-cli/master/install.sh | bash",
            "fossa init",
            "fossa analyze"
        ],
        "test": "phpunit tests/SM3Test",
        "arch": [
            "@arch-tar",
            "@arch-zip"
        ],
        "arch-tar": "@composer archive -f tar --dir ./dist --file sm3-master",
        "arch-zip": "@composer archive -f zip --dir ./dist --file sm3-master"
    },
    "scripts-descriptions": {
        "ci": "Archive them if they pass the Unit test cases",
        "test-fossa": "Run the test of license",
        "test": "Run the PHPUnit",
        "arch": "Archive them to dicts",
        "arch-tar": "Archive them to .tar.gz",
        "arch-zip": "Archive them to .zip"
    },
    "suggest": {
        "hirak/prestissimo": "*",
        "ext-gmp": "*",
        "delight-im/base-convert": "~v1.1.0"
    }
}
